{% macro heroblock(data, which) %}
    {% if data.sectionsActive %}
        <div id="{{data.section[which].id}}" class="series flex between {{data.section[which].imageSide}}">
            <div class="text">
                <h3>
                    {{data.section[which].title}}{% if data.section[which].regTrademark %}<sup>&reg;</sup>{% endif %}
                </h3>
                <p><strong>Features</strong></p>
                <ul>
                    {% for i in data.section[which].list[0].listitem %}
                        <li>{{i}}</li> 
                    {% endfor %}
                </ul>
                <div class="center">
                    <p class="learn-more">Learn More</p>
                    <i class="fas fa-angle-down"></i>
                </div>
                <p class="information">{{data.section[which].paragraph | safe}}</p>
            </div>
            <div class="img">
                <img src="//dks.scene7.com/is/image/dksfed/{{data.section[which].heroImage}}" alt="{{data.section[which].title}}"/>
            </div>
        </div>
    {% endif %}
{% endmacro %}

